{
   "name": "Twitter Shortcuts Xtra",
   "version": "0.0.6",
   "manifest_version": 2,
   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "icons": {
      "128": "icons/icon128.png",
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
   },
   "content_scripts": [ {
      "js": [ "contents.js" ],
      "matches": [ "http://twitter.com/*", "https://twitter.com/*" ]
   } ],
   "description": "Twitter Shortcuts Xtra, with i.a. open any twitter link in a new background tab with the key 'o'",
   "permissions": [ "tabs" ]
}